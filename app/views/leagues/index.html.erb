<%= render partial: 'shared/application/sidebar' %>

<div class='w-full'>
  <%= render partial: 'shared/application/header' %>

  <% @leagues.each do |league| %>
    <% if league.ongoing %>
      <div class='flex flex-col'>
        <div class='flex flex-row items-center mb-10'>
          <img alt='league-logo' src='<%= league.logo %>' style='width:50px; height:50px;'>
          <span class='font-bold ml-5'><%= league.name %></span>
          <%= link_to 'Ver', league_leagues_path(league.parameterized_name), class: 'inline-flex', 'aria-label': 'Home' %>
        </div>
      </div>
    <% end %>
  <% end %>
  <p>Recently finished</p>
  <% @leagues.each do |league| %>
    <% unless league.ongoing %>
      <div class='flex flex-col'>
        <div class='flex flex-row items-center mb-10'>
          <img alt='league-logo' src='<%= league.logo %>' style='width:50px; height:50px;'>
          <span class='font-bold ml-5'><%= league.name %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
